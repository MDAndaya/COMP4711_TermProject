<div class="disc-list">
    {{#each discussions}}
    <div class="card">
        <img class="photo" src={{this.url}} alt="p1">
        <h3 class="title">{{this.title}}</h3>
        <div class="topic">{{this.topic}}</div>
        <div class="content">
            <p class="body">{{this.body}}</p>
            <div class="date">{{this.date}}</div>
            <a class="replies" href="/discussions/replies/{{this.id}}">{{numberOfReplies}} replies</a>

        </div>
        <!--get number of replies. -->
    </div>
    {{/each}}
</div>