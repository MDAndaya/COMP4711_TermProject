<div class="disc-list">
    {{#each discussions}}
    <div class="card">
        <img class="photo" onclick="goProfile({{this.userid}})" src="{{this.url}}" alt="p1">
        <h3 class="title">{{this.title}}</h3>
        <div class="topic">{{this.topic}}</div>
        <div class="content">
            <p class="body">{{this.body}}</p>
            {{!-- {{#if isDiscussion}} --}}
            <div class="date" >{{dateTrim this.dateposted}}</div>
            <a class="replies" href="/discussions/replies/{{this.userid}}/{{this.id}}">{{this.numreply}} replies</a>
            {{!-- {{/if}} --}}
        </div>
        <!--TODO:get number of replies. could use js file?  -->
    </div>
    {{/each}}
</div>
